# vim:ft=make

CXXFLAGS_NOERROR?=\
				  -Wno-error=float-equal \
				  -Wno-error=unused-result

# Some nice-to-have warnings would be:
#
#  -Wconversion
#  -Wsign-conversion
#
CXXFLAGS_WARNING?=\
				  -Warith-conversion \
				  -Wctor-dtor-privacy \
				  -Wdangling-reference \
				  -Wdelete-non-virtual-dtor \
				  -Wdiv-by-zero \
				  -Wdouble-promotion \
				  -Wduplicated-branches \
				  -Wenum-conversion \
				  -Wfloat-equal \
				  -Wfloat-conversion \
				  -Wimplicit-fallthrough=5 \
				  -Winfinite-recursion \
				  -Winit-list-lifetime \
				  -Winvalid-constexpr \
				  -Wnon-virtual-dtor \
				  -Wlogical-op \
				  -Wuseless-cast \
				  -Wmissing-include-dirs \
				  -Wmultiple-inheritance \
				  -Wodr \
				  -Wold-style-cast \
				  -Woverflow \
				  -Wredundant-decls \
				  -Wredundant-move \
				  -Wshadow=compatible-local \
				  -Wsign-promo \
				  -Wstack-protector \
				  -Wstrict-aliasing=3 \
				  -Wstrict-overflow=5 \
				  -Wsuggest-attribute=noreturn \
				  -Wsuggest-final-methods \
				  -Wsuggest-final-types \
				  -Wsuggest-override \
				  -Wswitch-bool \
				  -Wundef \
				  -Wunused
