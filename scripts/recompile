set -e

# The command below will clean the build and, then,
# compile the code with as many threads as you have cores.
# Fear the great power of pipes and subshells!
if [[ $JOBS == '' ]]; then
    JOBS=$(dc -e "$(cat /proc/cpuinfo | grep 'processor' | tail -n 1 | grep -Po '[0-9]+') 1 + p")
fi

find ./build -name '*.*o' | xargs -n 1 rm -vf

if [[ $CXX == '' ]]; then
    CXX=g++
fi

echo "$0: using $JOBS jobs"
make clean && make CXX=$CXX -j $JOBS
